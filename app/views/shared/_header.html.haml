    %li.nav-item
      %form.form-inline
        %input.form-control.rounded-12{:placeholder => 'Quick search'}
    %li.nav-item
      = link_to 'Home', "/",  style: 'color:#919191;', class: 'nav-link' 
    %li.nav-item
      = link_to '4k', "/movies?quality=4K", style: 'color:#6AC045;', class: 'nav-link'
